{
  "name": "sonarplanet-services",
  "version": "1.0.0",
  "description": "Address tracker",
  "main": "app.js",
  "repository": "git@github.com:sonarplanet/sonarplanet-services.git",
  "author": "sonarplanet",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.1",
    "web-push": "^3.3.0",
    "trackr-lib": "sonarplanet/trackr-lib#publish"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "dev": "nodemon ./dist/app.js",
    "start": "node ./dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "yarn test --coverage --no-cache",
    "pretty": "prettier --config ./prettier.config.js \"{src,test}/**/*.ts\"",
    "prettify": "pretty --write",
    "prettify:check": "pretty -l",
    "lint": "tslint -c ./tslint.json -t codeFrame \"{src,test}/**/*.ts\"",
    "lint:check": "lint --force"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": true
  },
  "devDependencies": {
    "typescript": "^2.8.1",
    "nodemon": "^1.17.3",
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "prettier": "1.12.1"
  },
  "engines" : {
    "node" : "^8.0"
  }
}
